@{
    ViewBag.Title = "Home Page";
    ViewBag.Format = String.Format("{0:dddd}", @ViewBag.Datum);
    int dag = @ViewBag.Id;
}
<script src="~/Scripts/fillComboBox.js"></script>
<script src="~/Scripts/GetResultsByKlas.js"></script>
<form action="~/Home/ResultPage" name="klasform">
    <h1 class="indexTitle">@ViewBag.Naam</h1>
    <h3>Klas</h3>
    <div class="ui-widget">
        <label>Selecteer een klas:</label>
        <select id="combobox">
            <option value="">Select one.."></option>
        </select>
        <input type="submit" value="OK" class="button" onclick="GetResultsByKlas(@ViewBag.Id)">
